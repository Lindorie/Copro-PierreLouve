{# Template de la page d'accueil #}
{% extends '::base.html.twig' %}

{% block body %}

	<div id="pagetop">
		{% block diaporama %}
		<div id="diaporama">
			<img src="{{ asset('images/illu_diaporama.jpg') }}" alt="Image en attendant le diaporama" />
		</div>
		{% endblock %}
		
		{% block texteAccueil %}
		<div id="texteAccueil">
			<h2>Hello !</h2>
			<p>Voici le site de la copropriété Coteaux de chasse.<br />
			Le bundle "SiteBundle" est utilisé pour afficher le contenu du site public.</p>
			<a href="#">Voir plus d'informations</a>
		</div>
		{% endblock %}
	</div>
	
		{% for flashMessage in app.session.flashbag.get('notice') %}
			<div class="flash-notice">
				{{ flashMessage }}
			</div>
		{% endfor %}
		
	<div id="pagebottom">
		{% block actus %}				
			<h2>Actualités</h2>		
			{% for actu in actus %}
				<div class="actu" id="actu{{ actu.id }}">
					{# ici rajouter la photo d'illustration #}
					
					<h3>{{ actu.titre }}</h3>
					<p>{{ actu.texte }}</p>
				</div>
			{% endfor %}
		{% endblock %}
	</div>

{% endblock %}