{# Template de la page d'accueil #}
{% extends 'base.html.twig' %}

{% block body_class "accueil" %}

{% block body %}

	<div id="pagetop">
		{% block diaporama %}
		<div id="diaporama">
			<img src="{{ asset('images/illu_diaporama.jpg') }}" alt="Image en attendant le diaporama" />
		</div>
		{% endblock %}

		{% block texteAccueil %}
		<div id="texteAccueil">
			<h2>Hello !</h2>
			<p>Voici le site de la copropriété Coteaux de chasse.<br />
			<a href="{{ path('plus_infos_homepage') }}">Voir plus d'informations</a>
		</div>
		{% endblock %}
	</div>

		{% for flashMessage in app.session.flashbag.get('notice') %}
			<div class="flash-notice">
				{{ flashMessage }}
			</div>
		{% endfor %}

	<div id="pagebottom">
		{% block actus %}
		<div id="actus">
			<h2>Actualités</h2>
			{% for actu in actus %}
				<div class="actu" id="actu{{ actu.id }}">
					{# ici rajouter la photo d'illustration #}

					<h3>{{ actu.titre }}</h3>
					<p>{{ actu.date|date("d/m/Y") }}</p>
					<p>{{ actu.texte }}</p>
				</div>
			{% endfor %}
		</div>
		{% endblock %}

		{% block connexion %}
		<div id="connexion">
			{% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
				Connecté ({{ app.user.username }})<br />
				<a href="{{ path('fos_user_security_logout') }}">Déconnexion</a><br />
				<a href="{{ path('documents') }}">Documents</a>
			{% else %}
				{% render path('fos_user_security_login') %}
			{% endif %}
		</div>
		{% endblock %}
	</div>
		{% block javascripts %}
		<script type="text/javascript" src="/js/jquery.min.1.7.1.js"></script> 
  		<script type="text/javascript" src="/js/jquery.jCarousel.js"></script>
          {% endblock %}
{% endblock %}
