{% extends 'base.html.twig' %}


{% block section_title "Réinitialisation du mot de passe" %}

    {% block section_content %}

        {% block aside_title "" %}
            {% block aside_content "" %}

                {% for flashMessage in app.session.flashbag.get('notice') %}
                    <div class="flash-notice">
                        {{ flashMessage }}
                    </div>
                {% endfor %}

                <div class="bg-info alert alert-success">
                    L'identifiant et le mot de passe ont été réinitialisés pour {{ user.nom }} {{ user.prenom }} : <strong>{{ user.username }}</strong>
                </div>

                <a href="{{ path('users_list') }}">Retour à la liste des utilisateurs</a>

                <div class="clearfix"></div>
            {% endblock %}